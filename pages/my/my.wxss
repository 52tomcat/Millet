page {
  background: #f1f1f1;
}

.list {
  position: relative;
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  margin-top: 50rpx;
  overflow: hidden;
}

text {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #202020;
}

.column {
  position: absolute;
  width: 100%;
  height: 100rpx;
  transition: left 0.2s ease-in-out;
  z-index: 5;
  background: #fff;
}

.row text {
  font-weight: bold;
}

.del {
  position: absolute;
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 4;
  top: 0;
  bottom: 0;
  line-height: 116rpx;
  right: 0;
  color: #fff;
}
