.my {
  width: 100%;
  height: 100%;
  background-color: #f8f8f8;
}

.top {
  width: 100%;
  height: 300rpx;
  background-image: url('https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=2990464332,654735747&fm=26&gp=0.jpg');
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  display: flex;
  align-items: center;
}

.top .top-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 50rpx;
}

.top-icon image {
  width: 160rpx;
  height: 160rpx;
  display: block;
}

.top-text {
  font-size: 36rpx;
  color: #555;
  padding-left: 30rpx;
}

.bottom {
  padding-top: 20rpx;
}

.item {
  padding: 0 20rpx;
  background-color: #fff;

}

.items {
  border-bottom: 1rpx solid #eee;
  line-height: 100rpx;
  display: flex;
  align-items: center;
}

.items:last-child {
  border: 0 none;
}

.items .icon {
  width: 50rpx;
  height: 50rpx;
  padding-right: 20rpx;
}

.items .icon image {
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.items .text {
  font-size: 34rpx;
  color: #333;
}

.card {
  margin:20rpx 0;
}