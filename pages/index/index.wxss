.home {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.search {
  width: 100%;
  height: 70rpx;
  padding: 20rpx 0rpx;
  background: #ff620b;
}

.search .wrap {
  height: 100%;
  width: 93%;
  background-color: #fff;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 30rpx;
  font-size: 36rpx;
  color: #999;
}

.search .wrap image {
  width: 70rpx;
  height: 70rpx;
}

.swiper {
  height: 460rpx;
  width: 100%;
}

.swiper .swiper-item {
  width: 100%;
  height: 100%;
}

.swiper .swiper-item image {
  width: 100%;
  height: 100%;
  display: block;
}

.content {
  width: 100%;
  height: 100%;
}

.content .nav {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.nav-items {
  width: 20%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.content .nav image {
  width: 90rpx;
  height: 90rpx;
  display: block;
}

.nav .nav-title {
  font-size: 30rpx;
  color: #333;
}

.content .recommend {
  margin-top: 25rpx;
  background-color: #fff;
}

.recommend .title {
  font-size: 40rpx;
  line-height: 90rpx;
  padding-left: 30rpx;
  color: #333;
  background-color: #f7f7f7;
}

.recommend .substance {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  background-color: #f7f7f7;
}

.recommend .substance .sub-item {
  width: 49%;
  height: 100%;
  margin-bottom: 20rpx;
  background-color: #fff;
  text-align: center;
}

.substance .sub-item image {
  width: 100%;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}

.substance .sub-item .name {
  font-size: 34rpx;
  padding: 0 20rpx;
  color: #333;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
}

.substance .sub-item .brief {
  font-size: 30rpx;
  padding: 0 20rpx;
  color: #b0b0b0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.substance .sub-item .price {
  font-size: 30rpx;
  padding: 0 20rpx;
  color: #b0b0b0;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
  padding-bottom: 30rpx;
}

.substance .sub-item .price .new {
  color: #ff6700;
  padding-right: 15rpx;
}

.recommend .substance:after {
  content: "";
  height: 0;
  width: 49%;
}
