/* pages/find/find.wxss */

.find {
  width: 100%;
  height: 100%;
  background-color: #f9f9f9;
  position: relative;
}

.find .nav {
  padding: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.find .nav .item {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-right: 1px solid #efefef;
}

.find .nav .item:nth-last-child(1) {
  border-right: 0 none;
}

.nav .item image {
  width: 60rpx;
  height: 60rpx;
}

.nav .item .text {
  font-size: 30rpx;
  color: #333;
  padding-top: 20rpx;
}

.find .content {
  margin: 20rpx;
}

.content .items {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  position: relative;
  text-align: center;
}

.items .item-img .imgs {
  width: 100%;
  height: 400rpx;
}

.items .icon {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 28%;
  left: 50%;
  margin-left: -60rpx;
  opacity: 0.8;
}

.items .texts {
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  font-size: 36rpx;
  color: #666;
}

.items .desc {
  font-size: 32rpx;
  padding-bottom: 15rpx;
  color: #999;
}

.find .dialog {
  height: 100%;
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.3);
}

.dialog .video {
  margin-top: 40%;
  padding: 0 10rpx;
}

.dialog .video .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 0 30rpx;
  height: 100rpx;
  border-radius: 10rpx 10rpx 0 0;
}

.dialog .video .title .left {
  font-size: 36rpx;
  color: #333;
}

.dialog .video .title .right {
  width: 60rpx;
  height: 60rpx;
}

.video video {
  width: 97.4vw;
  border-radius: 0 0 10rpx 10rpx;
}